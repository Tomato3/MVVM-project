<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.aries.ui.view.title.TitleBarView
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    app:title_actionTextColor="@color/colorTextBlack"
    app:title_actionTint="@color/colorTextBlack"
    app:title_dividerBackground="@color/colorLineGray"
    app:title_dividerHeight="@dimen/dp_line_size"
    app:title_leftTextColor="@color/colorTextBlack"
    app:title_leftTextDrawable="@mipmap/ic_arrow_left"
    app:title_leftTextDrawableTint="@color/colorTextBlack"
    app:title_rightTextColor="@color/colorTextBlack"
    app:title_rightTextDrawableTint="@color/colorTextBlack"
    app:title_statusBarLightMode="true"
    app:title_titleMainText="@string/app_name"
    app:title_titleMainTextColor="@color/colorTextBlack"
    app:title_titleSubTextColor="@color/colorTextBlack"/>

</RelativeLayout>
